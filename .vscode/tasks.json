{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Server"
            },
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Watch Server",
            "command": "dotnet",
            "args": [
                "watch"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Server"
            },
            "presentation": {
                "reveal": "always",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}